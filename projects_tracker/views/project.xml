<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="view_project_form" model="ir.ui.view">
        <field name="name">project.project.form</field>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <form string="Project form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="signed_at"/>
                    </group>
                    <notebook>
                        <page string="Tasks">
                            <field name="task_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="time_required"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="name"/>
                                        <field name="time_required"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_project_tree" model="ir.ui.view">
        <field name="name">project.project.tree</field>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="signed_at"/>
            </tree>
        </field>
    </record>

    <record id="action_project" model="ir.actions.act_window">
        <field name="name">Projects</field>
        <field name="res_model">project.project</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_project" name="All Projects" parent="menu_project_root" action="action_project"/>

</odoo>